@page "{name}"
@model OnlineShop.UI.Pages.ProductModel
@{}

<div>
	<p>@Model.Product.Name</p> <br />
	<p>@Model.Product.Description</p> <br />
	<p>@Model.Product.Value</p> <br />

	<div>
		<form method="post">
		<label>Stock</label>
		<select asp-for="CartViewModel.StockId">
			@foreach (var stock in Model.Product.Stock)
			{
				<option value="@stock.Id"> @stock.Description</option>
			}
		</select>
		<label>Quantity</label>
		<input asp-for="CartViewModel.Quantity" />
		<button type="submit">Submit</button>
		</form>
	</div>
	<br />
	<a asp-page="/Index">
		<div class="button">Back to Main</div>
	</a>

</div>
<br />

@await Component.InvokeAsync("Cart")