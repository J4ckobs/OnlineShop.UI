@page
@model OnlineShop.UI.Pages.Accounts.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="hero">
    <div class="hero-body">
        <div class="box" style="width: 400px; min-height: 400px;">
            <!-- Header -->
            <div class="has-text-centered mb-5">
                <div class="admin-icon is-flex
                            is-justify-content-center
                            is-align-items-center
                            mx-auto has-text-white"
                        style="border-radius: 50%;">
                    <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>
                </div>
                <h1 class="title is-5 mb-1">Admin Panel</h1>
                <p class="subtitle is-7 has-text-grey-light">
                    Sign in to your account
                </p>
            </div>

            <!-- Form -->
            <form method="post">
                <div asp-validation-summary="All" class="notification is-danger is-hidden"></div>

                <div class="field">
                    <label class="label is-small" for="username">
                        <i class="fa fa-user" aria-hidden="true"></i>&nbsp; Username
                    </label>
                    <div class="control has-icons-left">
                        <input asp-for="Input.Username" class="input" type="text" id="username"
                                placeholder="Enter your username" required>
                        <span class="icon is-small is-left"><i class="fa fa-user"></i></span>
                    </div>
                    <span asp-validation-for="Input.Username" class="help is-danger"></span>
                </div>

                <div class="field">
                    <label class="label is-small" for="password">
                        <i class="fa fa-lock" aria-hidden="true"></i>&nbsp; Password
                    </label>
                    <div class="control has-icons-left">
                        <input asp-for="Input.Password" class="input" type="password" id="password"
                                placeholder="Enter your password" required>
                        <span class="icon is-small is-left"><i class="fa fa-lock"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="help is-danger"></span>
                </div>

                <div class="field">
                    <button type="submit" class="button is-primary is-fullwidth">
                        <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp; Sign In
                    </button>
                </div>
            </form>

            <div class="has-text-centered mt-4">
                <a asp-page="/Index" class="has-text-primary is-size-7">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    &nbsp;Back to Main Site
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <script src="~/js/admin/login.js" asp-append-version="true"></script>

}