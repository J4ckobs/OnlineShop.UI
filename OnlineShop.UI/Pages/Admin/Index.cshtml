@page
@model OnlineShop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
	<div class="columns">
		<div class="column is-3">
			<div class="menu">
				<p class="menu-label">Admin Menu</p>
				<ul class="menu-list">
					<li v-on:click="menu = 0"><a>Products</a></li>
					<li v-on:click="menu = 1"><a>Orders</a></li>
					<li v-on:click="menu = 2"><a>Stock</a></li>
				</ul>
			</div>
		</div>
		<div class="column is-9">
			<product-manager v-if="menu === 0"></product-manager>
			<p v-else="menu === 1">Orders</p>
			<p v-else="menu === 2">Stock</p>
		</div>
	</div>

	
</div>


@section scripts {
	<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
	<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.js"></script>
	<script src="~/js/admin/product-component.js"></script>
	<script src="~/js/admin/main.js"></script>

}